<resources>

    <!-- Base application theme. -->
    <style name="FumigabotTheme" parent="Theme.AppCompat.Light"> <!-- .DarkActionBar"-->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/activityBackground</item>
        <item name="buttonStyle">@style/botonStyle</item>
        <item name="android:textViewStyle">@style/labelsStyle</item>
        <item name="editTextStyle">@style/editTextStyle</item>

    </style>


    <!-- Estilos de cada componente  -->

    <style name="botonStyle" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:theme">@style/Widget.AppCompat.Button.Colored</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/disabledControl</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>


    <style name="labelsStyle"> # parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="labelAdvertenciaStyle"> # parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@color/fondoAdvertencia</item>
    </style>

    <style name="labelAlertaStyle"> # parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@color/fondoAlerta</item>
    </style>

    <style name="editTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        #colorActivatedHighlight
        <item name="android:textColorHighlight">@color/colorAccentTransparency</item>
    </style>


    <style name="alertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
