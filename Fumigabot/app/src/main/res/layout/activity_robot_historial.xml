<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RobotHistorialActivity">
    <!-- android:background="@color/colorPrimary" -->

    <TextView
        android:id="@+id/textSinFumigaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/recuadro_sin_fumigaciones"
        android:padding="20dp"
        android:text="Todavía no se realizaron fumigaciones"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--android:textColor="@color/colorPrimary"-->

    <TableLayout
        android:id="@+id/tablaHistorial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:fitsSystemWindows="true"
        android:orientation="horizontal"
        android:paddingBottom="10dp"

        android:shrinkColumns="*"
        android:stretchColumns="*"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow android:id="@+id/tablaHistorialTitulo">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="4"
                android:gravity="center_horizontal"
                android:padding="30dp"
                android:text="HISTORIAL DE FUMIGACIONES" />
            <!--
                android:background="@color/colorPrimary"
                android:textColor="@color/colorPrimaryDark" -->
        </TableRow>

        <TableRow android:id="@+id/tablaHistorialColumnas">

            <TextView
                android:layout_column="0"
                android:padding="3dip"
                android:text="ID"
                android:textAlignment="center" />
            <!--
                android:background="@color/colorPrimary"
                android:textColor="@color/colorPrimaryDark" -->

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Inicio"
                android:textAlignment="center" />
            <!--
                android:background="@color/colorPrimary"
                android:textColor="@color/colorPrimaryDark" -->

            <TextView
                android:layout_column="2"
                android:padding="3dip"
                android:text="Fin"
                android:textAlignment="center" />
            <!--
                android:background="@color/colorPrimary"
                android:textColor="@color/colorPrimaryDark" -->

            <TextView
                android:layout_column="3"
                android:padding="3dip"
                android:text="Duración"
                android:textAlignment="center"/>
            <!--
                android:background="@color/colorPrimary"
                android:textColor="@color/colorPrimaryDark" -->
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>